---
import BaseLayout from "@layouts/BaseLayout.astro";
import CitationChip from "@components/CitationChip.astro";
import { readJson } from "@utils/data";

const benchmarks = await readJson("benchmarks/benchmarks.json");
---
<BaseLayout wide title="Benchmarks - Causal AI Futures" description="Evaluation protocols and reproducibility standards anchored to evidence.">
  <section class="section hero">
    <div class="container">
      <p class="eyebrow">Benchmarks</p>
      <h1>Benchmarks & reproducibility</h1>
      <p class="subtle">Evaluation protocols and replication signals anchored to evidence.</p>
    </div>
  </section>

  <section class="section">
    <div class="container grid">
      {benchmarks.map((benchmark) => (
        <div class="card">
          <div class="term-head">
            <h3>{benchmark.name}</h3>
            <CitationChip evidence={benchmark.evidence} />
          </div>
          <p class="subtle">{benchmark.scope}</p>
          <p class="focus">{benchmark.focus}</p>
          <div class="chip secondary">{benchmark.replication}</div>
        </div>
      ))}
    </div>
  </section>

  <style>
    h1 {
      margin: 0 0 0.6rem;
      font-size: clamp(2rem, 3vw, 2.8rem);
    }

    .grid {
      display: grid;
      gap: 1.5rem;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    }

    .term-head {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
    }

    .focus {
      font-family: var(--font-serif);
      color: var(--muted);
      line-height: 1.6;
    }
  </style>
</BaseLayout>
