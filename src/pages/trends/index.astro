---
import BaseLayout from "@layouts/BaseLayout.astro";
import TrendCard from "@components/TrendCard.astro";
import { getCollection } from "astro:content";

const trends = await getCollection("trends");
---
<BaseLayout wide title="Tendencies - Causal AI Futures" description="Editorial tendencies grounded in arXiv evidence and open questions.">
  <section class="section hero">
    <div class="container">
      <p class="eyebrow">Tendencies</p>
      <h1>Tendencies, not hype</h1>
      <p class="subtle">Evidence-backed movement in causal AI, with debate anchors and open problems.</p>
    </div>
  </section>

  <section class="section">
    <div class="container trend-grid">
      {trends.map((trend) => (
        <TrendCard trend={trend} />
      ))}
    </div>
  </section>

  <style>
    h1 {
      margin: 0 0 0.6rem;
      font-size: clamp(2rem, 3vw, 2.8rem);
    }

    .trend-grid {
      display: grid;
      gap: 1.5rem;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    }
  </style>
</BaseLayout>
