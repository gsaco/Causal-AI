---
import BaseLayout from "@layouts/BaseLayout.astro";
import CitationChip from "@components/CitationChip.astro";
import { readJson } from "@utils/data";

const groups = await readJson("tools/tools.json");
---
<BaseLayout wide title="Tools - Causal AI Futures" description="Tooling ecosystems for causal AI, with evidence.">
  <section class="section hero">
    <div class="container">
      <p class="eyebrow">Tools</p>
      <h1>Tooling ecosystems</h1>
      <p class="subtle">Grouped causal AI tooling with evidence anchors and clear source labeling.</p>
    </div>
  </section>

  <section class="section">
    <div class="container tool-groups">
      {groups.map((group) => (
        <div class="tool-group">
          <div class="section-header">
            <h2>{group.group}</h2>
          </div>
          <div class="grid">
            {group.items.map((tool) => (
              <div class="card">
                <div class="term-head">
                  <h3>{tool.name}</h3>
                  <CitationChip evidence={tool.evidence} />
                </div>
                <p class="tool-summary">{tool.summary}</p>
                <div class="tag-row">
                  {tool.links.map((link) => (
                    <a class="chip secondary" href={link.url} target="_blank" rel="noreferrer">{link.label}</a>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <style>
    h1 {
      margin: 0 0 0.6rem;
      font-size: clamp(2rem, 3vw, 2.8rem);
    }

    .tool-groups {
      display: grid;
      gap: 2rem;
    }

    .grid {
      display: grid;
      gap: 1.5rem;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    }

    .term-head {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
    }

    .tool-summary {
      font-family: var(--font-serif);
      color: var(--muted);
      line-height: 1.6;
    }
  </style>
</BaseLayout>
