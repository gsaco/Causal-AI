---
import BaseLayout from "@layouts/BaseLayout.astro";
import CitationChip from "@components/CitationChip.astro";

const tools = [
  {
    name: "DoWhy",
    summary: "End-to-end causal inference library with explicit identification and refutation steps.",
    evidence: ["2011.04216"],
    links: [
      { label: "GitHub", url: "https://github.com/py-why/dowhy" }
    ]
  },
  {
    name: "CausalLearn",
    summary: "Python toolbox for causal discovery and causal effect estimation.",
    evidence: ["2307.16405"],
    links: [
      { label: "GitHub", url: "https://github.com/py-why/causal-learn" }
    ]
  },
  {
    name: "CausalML",
    summary: "Uplift and heterogeneous treatment effect estimation toolkit.",
    evidence: ["2002.11631"],
    links: [
      { label: "GitHub", url: "https://github.com/uber/causalml" }
    ]
  }
];
---
<BaseLayout wide title="Tools - Causal-AI">
  <section class="section hero">
    <div class="container">
      <h1>Tools</h1>
      <p class="subtle">Libraries and tooling with explicit causal grounding.</p>
    </div>
  </section>

  <section class="section">
    <div class="container grid">
      {tools.map((tool) => (
        <div class="card">
          <div class="term-head">
            <h3>{tool.name}</h3>
            <CitationChip evidence={tool.evidence} />
          </div>
          <p class="tool-summary">{tool.summary}</p>
          <div class="tag-row">
            {tool.links.map((link) => (
              <a class="chip secondary" href={link.url} target="_blank" rel="noreferrer">{link.label}</a>
            ))}
          </div>
        </div>
      ))}
    </div>
  </section>

  <style>
    h1 {
      margin: 0 0 0.6rem;
      font-size: clamp(2rem, 3vw, 2.8rem);
    }

    .grid {
      display: grid;
      gap: 1.5rem;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    }

    .term-head {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 1rem;
    }

    .tool-summary {
      font-family: var(--font-serif);
      color: var(--muted);
      line-height: 1.6;
    }
  </style>
</BaseLayout>
