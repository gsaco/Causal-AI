---
import ThemeToggle from "@components/ThemeToggle.astro";
import { withBase } from "@utils/withBase";
import { siteMeta } from "@lib/siteMeta";

const navGroups = [
  {
    label: "Explore",
    links: [
      { href: "/observatory", label: "Observatory" },
      { href: "/trends", label: "Tendencies" },
      { href: "/topics", label: "Topics" },
      { href: "/atlas", label: "Atlas" },
      { href: "/papers", label: "Papers" }
    ]
  },
  {
    label: "Learn",
    links: [
      { href: "/learn", label: "Start Here" },
      { href: "/learn#playlists", label: "Playlists" },
      { href: "/frontiers", label: "Frontiers" },
      { href: "/glossary", label: "Glossary" }
    ]
  },
  {
    label: "Practice",
    links: [
      { href: "/applications", label: "Applications" },
      { href: "/tools", label: "Tools" },
      { href: "/benchmarks", label: "Benchmarks" }
    ]
  }
];
const trustLinks = [
  { href: "/trust/editorial", label: "Editorial Policy" },
  { href: "/trust/provenance", label: "Data Provenance" },
  { href: "/trust/update-log", label: "Update Log" },
  { href: "/trust/ranking", label: "Ranking Methodology" },
  { href: "/trust/citation-coverage", label: "Citation Coverage" },
  { href: "/trust/how-to-cite", label: "How to Cite" }
];
---
<header class="site-header">
  <div class="container header-inner">
    <a class="logo" href={withBase("/")}>{siteMeta.title}</a>
    <details class="mobile-menu">
      <summary>Menu</summary>
      <div class="mobile-panel">
        {navGroups.map((group) => (
          <div class="mobile-group">
            <span>{group.label}</span>
            {group.links.map((link) => (
              <a href={withBase(link.href)}>{link.label}</a>
            ))}
          </div>
        ))}
        <div class="mobile-trust">
          <span>Trust</span>
          {trustLinks.map((link) => (
            <a href={withBase(link.href)}>{link.label}</a>
          ))}
        </div>
        <a href={withBase("/contribute")}>Contribute</a>
      </div>
    </details>
    <nav class="nav-links" aria-label="Primary">
      {navGroups.map((group) => (
        <details class="nav-group">
          <summary>{group.label}</summary>
          <div class="nav-panel">
            {group.links.map((link) => (
              <a href={withBase(link.href)}>{link.label}</a>
            ))}
          </div>
        </details>
      ))}
      <details class="trust-menu">
        <summary>Trust</summary>
        <div class="trust-panel">
          {trustLinks.map((link) => (
            <a href={withBase(link.href)}>{link.label}</a>
          ))}
        </div>
      </details>
      <a href={withBase("/contribute")}>Contribute</a>
    </nav>
    <div class="actions">
      <button class="button ghost cmdk-trigger" type="button" data-cmdk-open>
        Search <span class="kbd">Cmd+K</span>
      </button>
      <ThemeToggle />
    </div>
  </div>
</header>

<style>
  .site-header {
    position: sticky;
    top: 0;
    z-index: 10;
    backdrop-filter: blur(12px);
    background: color-mix(in srgb, var(--bg) 82%, transparent);
    border-bottom: 1px solid var(--border);
  }

  .header-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0.9rem 0;
    gap: 1rem;
  }

  .logo {
    font-weight: 700;
    font-size: 1rem;
    letter-spacing: 0.02em;
  }

  .mobile-menu {
    position: relative;
  }

  .mobile-menu summary {
    list-style: none;
    cursor: pointer;
    padding: 0.35rem 0.6rem;
    border-radius: 10px;
    border: 1px solid var(--border);
    background: var(--bg-elevated);
  }

  .mobile-menu summary::-webkit-details-marker {
    display: none;
  }

  .mobile-panel {
    position: absolute;
    top: 2.6rem;
    left: 0;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 14px;
    padding: 0.8rem;
    min-width: 220px;
    display: grid;
    gap: 0.4rem;
    box-shadow: 0 16px 24px -20px var(--shadow);
  }

  .mobile-panel a {
    padding: 0.35rem 0.5rem;
    border-radius: 8px;
  }

  .mobile-group {
    display: grid;
    gap: 0.25rem;
    border-bottom: 1px solid var(--border);
    padding-bottom: 0.45rem;
  }

  .mobile-group span {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted);
  }

  .mobile-trust {
    border-top: 1px solid var(--border);
    padding-top: 0.4rem;
    display: grid;
    gap: 0.2rem;
  }

  .mobile-trust span {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--muted);
    margin-bottom: 0.2rem;
  }

  .nav-links {
    display: none;
    gap: 1rem;
    align-items: center;
    font-size: 0.95rem;
  }

  .nav-links a,
  .nav-links summary {
    padding: 0.35rem 0.5rem;
    border-radius: 8px;
  }

  .nav-links a:hover,
  .nav-links summary:hover {
    background: var(--surface);
  }

  .trust-menu {
    position: relative;
  }

  .trust-menu summary {
    list-style: none;
    cursor: pointer;
  }

  .nav-group {
    position: relative;
  }

  .nav-group summary {
    list-style: none;
    cursor: pointer;
  }

  .nav-group summary::-webkit-details-marker {
    display: none;
  }

  .nav-panel {
    position: absolute;
    top: 2.2rem;
    left: 0;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 0.6rem;
    min-width: 200px;
    display: grid;
    gap: 0.2rem;
    box-shadow: 0 16px 24px -20px var(--shadow);
  }

  .nav-panel a {
    padding: 0.45rem 0.6rem;
    border-radius: 8px;
  }

  .nav-panel a:hover {
    background: var(--surface);
  }

  .trust-menu summary::-webkit-details-marker {
    display: none;
  }

  .trust-panel {
    position: absolute;
    top: 2.2rem;
    left: 0;
    background: var(--bg-elevated);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 0.6rem;
    min-width: 220px;
    display: grid;
    gap: 0.2rem;
    box-shadow: 0 16px 24px -20px var(--shadow);
  }

  .trust-panel a {
    padding: 0.45rem 0.6rem;
    border-radius: 8px;
  }

  .trust-panel a:hover {
    background: var(--surface);
  }

  .actions {
    display: flex;
    align-items: center;
    gap: 0.6rem;
  }

  .cmdk-trigger {
    font-size: 0.8rem;
    padding: 0.4rem 0.7rem;
  }

  @media (min-width: 960px) {
    .mobile-menu {
      display: none;
    }

    .nav-links {
      display: flex;
    }
  }
</style>
