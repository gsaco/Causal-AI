---
import { withBase } from "@utils/withBase";
const { trend } = Astro.props;
---
<article class="card trend-card">
  <h3><a href={withBase(`/trends/${trend.slug}`)}>{trend.data.title}</a></h3>
  <p class="subtle">{trend.data.summary}</p>
  <div class="tag-row">
    {trend.data.signals.map((signal) => (
      <span class="chip secondary">{signal}</span>
    ))}
  </div>
</article>

<style>
  .trend-card {
    display: grid;
    gap: 0.8rem;
  }
</style>
