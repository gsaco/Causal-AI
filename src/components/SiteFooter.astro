---
import { withBase } from "@utils/withBase";
import { siteMeta } from "@lib/siteMeta";

const links = [
  { href: "/about", label: "About" },
  { href: siteMeta.repoUrl, label: "GitHub", external: true },
  { href: "/trust/how-to-cite", label: "Cite" }
];
---
<footer class="site-footer">
  <div class="container footer-inner">
    <div class="footer-brand">
      <strong>{siteMeta.title}</strong>
      <p class="subtle">{siteMeta.tagline}</p>
      <p class="subtle footer-credit">Built by {siteMeta.author}.</p>
    </div>
    <div class="footer-links">
      {links.map((link) =>
        link.external ? (
          <a href={link.href} target="_blank" rel="noreferrer">{link.label}</a>
        ) : (
          <a href={withBase(link.href)}>{link.label}</a>
        )
      )}
    </div>
  </div>
</footer>

<style>
  .site-footer {
    border-top: 1px solid var(--border);
    background: var(--surface);
    padding: 2.5rem 0;
  }

  .footer-inner {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .footer-brand {
    display: grid;
    gap: 0.3rem;
  }

  .footer-credit {
    font-size: 0.85rem;
  }

  .footer-links {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.9rem;
  }

  @media (min-width: 768px) {
    .footer-inner {
      flex-direction: row;
      justify-content: space-between;
    }
  }
</style>
